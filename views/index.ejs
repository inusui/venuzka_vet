	<!-- section Crear nueva Tarjeta -->
<section id="nueva">
	<div class="gallery_section_2">
		<div class="about_text">
			<div class="container">
				<div class="row">
					<div class="col-sm-8">
						<h3 class="get_taital">Crear Nueva Tarjeta</h3>
						<% 
                        let dateTime = new Date()
						let id = dateTime.getFullYear().toString()+(dateTime.getMonth()+1).toString()+dateTime.getDate().toString()+'-'+dateTime.getHours().toString() +dateTime.getMinutes().toString() +dateTime.getSeconds().toString();                
                        
						let minutos = "0"
						if (dateTime.getMinutes() < 10){
							minutos = "0" + dateTime.getMinutes().toString()
						}else{
							minutos = dateTime.getMinutes().toString()
						}
						let Time = dateTime.getHours().toString()+":"+ minutos +" "+dateTime.getDate().toString()+"-"+(dateTime.getMonth()+1).toString()+"-"+dateTime.getFullYear().toString()
						%>
						
							<form method="post" action="/veterinaria/add">
								<table class="nuevaTarjeta">
								<tr>
									<td> 
										<label>Identificador de la Mascota</label>
										<input type="text"  name="id" value="<%= id %>" readonly>
                                
									</td>
									<td>
										<label>Fecha</label>
										<input type="text"  name="hora_cita" value="<%= Time %>" readonly>
									</td>
																		
								</tr>
								<tr>
									<td><input type="text" name="PetName" placeholder="Nombre de la Mascota"></td>
									<td><input type="text" name="Especie" placeholder="Expecie">
									<input type="text" name="Raza" placeholder="Raza"></td>
								</tr>
								<tr>
									<td>
									<label>Sexo</label>
									<input type="radio" name="Sexo" value="F"><label>F</label>
									<input type="radio" name="Sexo" value="M"><label>M</label>
									</td>
									<td><label>Fecha de Nacimiento</label>
										<input type="date" name="Birth" placeholder="Fecha de Nacimiento">
									</td>							
								</tr>
								<tr>
									<td><input type="text" name="PetOwnerName" placeholder="Nombre del Due√±o"></td>
									<td><input type="tel" name="OwnerPhone" placeholder="Telefono del Due√±o"></td>
								</tr>
								<tr>
									<td><input type="text" name="Direccion" placeholder="Direccion"></td>
									<td><input type="text" name="Motivo" placeholder="Motivo de la Visita"></td>
								</tr>
								<tr>
									<td><input type="text" name="Detalles" placeholder="Detalle corto de la Visita"></td>
									<td><input type="number" name="Peso" step="any" placeholder="Peso en Libras"></td>
								</tr>
								<tr>
									<td><input type="number" name="Temperatura" step="any" placeholder="Temperatura en ¬∞C"></td>
									<td>
										<label for="">Proxima Cita:</label>
										<input type="datetime-local" name="nextDate"></td>
								</tr>
							</table>
								<input class="subscribe_bt" type="submit" onclick="return confirm('¬øSeguro que desea Agregar el Registro?');" value="Agregar Datos">
								<input class="more_bt" type="reset" onclick="return confirm('¬øSeguro que va a limpiar la Tabla?');" value="Limpiar">
							</form>
						
					</div>
					<div class="col-sm-4">
						<div class="dog_img"><img src="images/cat-img.png" style="max-width: 100%;"></div>
					</div>
				</div>	
			</div>
		</div>
	</div>
</section>	
    <!-- section Crear nueva tarjeta end -->

	<!-- section gallery start -->
<section id="buscar">
    <div class="gallery_main layout_padding">
    	<div class="container">
    		<div class="row">
    			<div class="col-sm-12">
    				<h1 class="about_taital"><strong><span style="color: #ffffff;">Buscar</span> Tarjeta</strong></h1>
				    <p class="sed_text"> Busca la Tarjeta de tu mascota</p>
					<p class="sed_text"> Registra una nueva Cita</p>

					<form method="post" action="/select">
						<input type="text" name="PetIDBuscar" placeholder="Identificacion de tu Mascota" style="width: 25%;" required>
						<button type="submit">Buscar</button>
					</form>

    			</div>
    		</div>
    	</div>
    </div>

</section>
<section id="todas_las_tarjetas">
    <div class="touch_section">
    	<div class="container">
    		<div class="row">
    			<div class="col-sm-12">
				    <h1 class="get_taital"><strong><span style="color: #ffffff;">Todas las</span>  Tarjetas</strong></h1>
    			</div>
    		</div>
    		<div class="email_box">
				<table class="tarjeta">
					<% let c =0
					 veterinaria.forEach(function(veterinaria){%>
					<tr>
						<th>Datos Generales:<h3><%= veterinaria.value.PetName %></h3></th>
						<th>Identificacion: <%= veterinaria.id %></th>
						<th>Raza: <%= veterinaria.value.Raza %></th>
					</tr>
					<tr>
						<th>Especie: <%=veterinaria.value.Especie %></th>
						<th>Sexo <%= veterinaria.value.Sexo %></th>
						<th>Fecha de Nacimiento: <%= veterinaria.value.Birth %></th>
					</tr>

					<tr>
						<th>Nombre del Due√±o: <%= veterinaria.value.PetOwnerName %></th>
						<th>Telefono: <%= veterinaria.value.OwnerPhone %></th>
						<td>
							<form method="post" action="/veterinaria/delete/<%= veterinaria.key %>">
								<input  type="hidden" value="<%= veterinaria.value.rev %>" name="rev">
								<input type="submit" class="botonAlingRight" onclick="return confirm('¬øSeguro que desea Eliminar a <%= veterinaria.value.PetName %>?');" value="Eliminar Registro X">
							</form>
						</td>
					</tr>
					
						<%
							for(i in veterinaria.value.Citas){
						%>
						<tr>
							<th>Fecha de la Conulta: <%=veterinaria.value.Citas[i].Fecha %> Motivo de la Consulta: <%= veterinaria.value.Citas[i].Motivo %></th>
							<th>Detalles: <%= veterinaria.value.Citas[i].Detalles %></th>
							<th>Peso: <%= veterinaria.value.Citas[i].Peso %>Lbs     Temperatura: <%= veterinaria.value.Citas[i].Temperatura %>¬∞C</th>
						</tr>
						<%
							}
						%>
						
					<% }); %>

				</table> <br> <br> <br>
    		</div>
    	</div>
    </div>
</section>
